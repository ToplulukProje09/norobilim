generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Post {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  paragraph   String?
  shortText   String?
  mainPhoto   String
  images      String[]
  comments    Comment[]
  show            Boolean   @default(true)   
  commentsAllowed Boolean   @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

type Comment {
  text      String
  createdAt DateTime @default(now())
}

model Yasak {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  wrongWords String[]
}

model Person {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  class       String
  department  String
  photo       String?
  roles       Role[]
  socialMedia Json?
}

model Role {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  organization String
  startDate    DateTime?
  endDate      DateTime?
  personId     String   @db.ObjectId
  person       Person   @relation(fields: [personId], references: [id])
}

model Event {
  id                 String      @id @default(auto()) @map("_id") @db.ObjectId
  title              String
  description        String
  image              String?
  didItHappen        Boolean     @default(false)
  numberOfAttendees  Int?
  location           String
  estimatedAttendees Int?
  eventImages        String[]
  eventDays          EventDay[]
}

model EventDay {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime
  startTime String
  endTime   String?
  details   String?
  event     Event?   @relation(fields: [eventId], references: [id])
  eventId   String?  @db.ObjectId
}

model Podcast {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  description   String?
  audioUrl      String
  coverImage    String?
  duration      Int?
  speakers      String[]
  seriesTitle   String?
  episodeNumber Int?
  releaseDate   DateTime @default(now())
  tags          String[]
  isPublished   Boolean   @default(true)
  listens       Int       @default(0)
}

model Academic {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  links       String[]
  files       String[]
  tags        String[]
  published   Boolean   @default(false)
  createdAt   DateTime  @default(now())
}

model MainMenu {
  id             String   @id @default("singleton") @map("_id")
  titlePrimary   String
  titleSecondary String
  mainLogo       String
  mainPhoto      String?
  aboutParagraph String?
  mainParagraph  String?
  socialLinks    String[] @default([])
  email          String?
}

model Auth {
  id       String @id @default("singleton") @map("_id")
  username String
  password String
}
